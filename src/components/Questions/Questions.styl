@import '../shared/font';
@import '../shared/colors';

.container
  max-width: 1200px
  margin: 0 auto;

  padding: 15px 0
  box-sizing: border-box;

.header
  padding: 20px 15px
  display: flex
  align-items: center;

.add
  box-sizing: border-box;
  margin-left: 4rem
  font-size: 2.5rem
  height: 4rem
  width: 4rem
  line-height: 4rem
  cursor: pointer;
  outline: none;

  background-color: color-text-selected;
  color: white;
  border-radius: 50%


.title
  font(font-preset[title])
  color: color-text-black

.questions
  display: flex;
  width: 100%
  flex-wrap: wrap;
