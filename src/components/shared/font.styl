font-family-base = Roboto, sans-serif

font-preset = {
  'title': (300 4rem 1.3),
  'smalltitle': (400 2rem 1.6),
  'smalltext': (400 1.5rem 1.7),
}

font-base(weight, size, line-height)
  font-family: font-family-base
  if weight
    font-weight: weight
  if size
    font-size: size
  if line-height
    line-height: line-height

font(preset, omit-weight=false, omit-size=false, omit-line-height=false)
  weight = preset[0]
  if omit-weight
    weight = omit-weight

  size = preset[1]
  if omit-size
    size = omit-size

  line-height = preset[2]
  if omit-line-height
    line-height = omit-line-height

  font-base(weight, size, line-height)
